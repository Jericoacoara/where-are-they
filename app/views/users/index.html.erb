<h1>Listing users</h1>

<table>
  <tr>
    <th>Uid</th>
    <th>Token</th>
    <th>Name</th>
    <th>Picture</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.uid %></td>
    <td><%= user.token %></td>
    <td><%= user.name %></td>
    <td><%= user.picture %></td>
    <td><%= user.link %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

